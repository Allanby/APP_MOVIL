<?xml version="1.0" encoding="utf-8"?>
<!-- 1. El contenedor principal ahora es un NestedScrollView -->
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".EmpleadosRH">

    <!-- 2. Dentro del NestedScrollView, colocamos el LinearLayout original -->
    <!--    Su altura ahora es wrap_content para que pueda crecer tanto como necesite -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- ðŸ”¹ Tarjeta para mostrar el total de empleados -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardTotalEmpleados"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="80dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:padding="16dp"
            app:cardBackgroundColor="#40641A1A"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp">

            <TextView
                android:id="@+id/totalEmpleados"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Total de empleados: --"
                android:textSize="22sp"
                android:textStyle="bold"
                android:padding="16dp"
                android:textColor="@android:color/black" />

        </androidx.cardview.widget.CardView>

        <!-- ðŸ”¹ ProgressBar centrado debajo -->
        <ProgressBar
            android:id="@+id/progress"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="40dp"
            android:indeterminate="true"
            android:indeterminateTint="@android:color/black"
            android:visibility="gone" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp" />

        <TextView
            android:layout_width="match_parent"
            android:textAlignment="center"
            android:textStyle="bold"
            android:layout_height="wrap_content"
            android:text="Total de empleados por departamento">
        </TextView>
        <Space
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp" />

        <!-- ðŸ”¹ RecyclerView para lista de departamentos -->
        <!-- 3. Cambio CRÃTICO para el RecyclerView -->
        <!--    layout_height debe ser "wrap_content" y le decimos que no haga scroll Ã©l mismo -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerDepartamentos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            android:clipToPadding="false"
            tools:listitem="@layout/item_employee" />

        <!-- barchart de rango de edades -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:textAlignment="center"
            android:text="Rango de edades"/>

        <com.github.mikephil.charting.charts.BarChart
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:id="@+id/barcharRango"/>

        <!-- Empleados por gÃ©nero -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:textAlignment="center"
            android:text="Empleados por gÃ©nero y tipo de contrato" />

        <!-- Contenedor para los dos grÃ¡ficos en una fila -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="230dp"
            android:orientation="horizontal"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="24dp">

            <!-- GrÃ¡fico de pastel 1 (GÃ©nero) -->
            <com.github.mikephil.charting.charts.PieChart
                android:id="@+id/pieChartGender"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>

            <!-- GrÃ¡fico de pastel 2 (Tipo de Contrato) -->
            <com.github.mikephil.charting.charts.PieChart
                android:id="@+id/pieChartContractType"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

        </LinearLayout>

    </LinearLayout>
</androidx.core.widget.NestedScrollView>
