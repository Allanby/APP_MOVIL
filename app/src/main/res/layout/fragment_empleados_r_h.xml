<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    tools:context=".EmpleadosRH">

    <!-- ðŸ”¹ Tarjeta para mostrar el total de empleados -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardTotalEmpleados"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:padding="16dp"
        app:cardBackgroundColor="#F5F5DC"
        app:cardCornerRadius="16dp"
        app:cardElevation="8dp">



        <TextView
            android:id="@+id/totalEmpleados"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Total de empleados: --"
            android:textSize="22sp"
            android:textStyle="bold"
            android:padding="16dp"
            android:textColor="@android:color/black" />

    </androidx.cardview.widget.CardView>

    <!-- ðŸ”¹ ProgressBar centrado debajo -->
    <ProgressBar
        android:id="@+id/progress"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="40dp"
        android:indeterminate="true"
        android:indeterminateTint="@android:color/black"
        android:visibility="gone" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp" />

    <TextView
        android:layout_width="match_parent"
        android:textAlignment="center"
        android:textStyle="bold"
        android:layout_height="wrap_content"
        android:text="Total de empleados por departamento">
    </TextView>
    <Space
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp" />
    <!-- ðŸ”¹ RecyclerView para lista de departamentos -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerDepartamentos"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_weight="1"
        android:clipToPadding="false"
        tools:listitem="@layout/item_employee" />



</LinearLayout>
