<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:elevation="8dp"
            app:cardCornerRadius="24dp"
            app:cardBackgroundColor="@color/blue_navy">

            <!-- Contenedor interno para alinear ícono + texto -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="28dp">

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    app:tint="@color/white"
                    android:src="@drawable/ic_timer_24"
                    android:layout_marginEnd="16dp"/>

                <TextView
                    android:id="@+id/textPermisosMes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/Defecto_cardpermes"
                    android:textSize="28sp"
                    android:textStyle="bold"
                    android:fontFamily="@font/timesbold"
                    android:textColor="@android:color/white"/>
            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:elevation="8dp"
            app:cardCornerRadius="24dp"
            app:cardBackgroundColor="@color/rosita">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:padding="14dp">

                <TextView
                    android:id="@+id/tituloPromedioPermisos"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:fontFamily="@font/timesbold"
                    android:text="Promedio de días de permisos"
                    android:textColor="@android:color/white"
                    android:textSize="26sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textPromedioDias"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Dias: -"
                    android:textSize="18sp"
                    android:textColor="@android:color/white"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>


    </LinearLayout>
</androidx.core.widget.NestedScrollView>
