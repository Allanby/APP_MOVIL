<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal">
    <androidx.cardview.widget.CardView
        android:id="@+id/cardTotalEmpleados"
        android:layout_width="180dp"
        android:layout_height="120dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:cardBackgroundColor="#303F9F"
        app:cardCornerRadius="16dp"
        app:cardElevation="8dp">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="12dp"
            >

            <TextView
                android:id="@+id/departamentostxt"
                android:layout_marginHorizontal="12dp"
                android:layout_marginVertical="3dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="Departamento "
                android:textAppearance="?attr/textAppearanceListItem"
                android:textSize="15sp" />
    <TextView
        android:id="@+id/textViewdepartamento"
        android:layout_marginHorizontal="12dp"
        android:layout_marginVertical="3dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Departamento "
        android:textAppearance="?attr/textAppearanceListItem"
        android:textSize="12sp" />
            <TextView
                android:id="@+id/txtTotalEmpleados"
                android:layout_marginHorizontal="12dp"
                android:layout_marginVertical="3dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="Total empleados "
                android:textAppearance="?attr/textAppearanceListItem"
                android:textSize="15sp" />

    <TextView
        android:layout_marginTop="4dp"
        android:layout_marginHorizontal="12dp"
        android:id="@+id/texviewTotalEmpleadosDepartamento"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Total de empleados"
        android:textColor="@color/material_dynamic_secondary30"
        android:textAppearance="?attr/textAppearanceListItem"
        android:textSize="12sp" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>
