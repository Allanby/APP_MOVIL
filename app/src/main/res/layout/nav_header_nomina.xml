<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/nav_header_nomina"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:background="#0B1578"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?attr/selectableItemBackgroundBorderless"
        android:gravity="bottom"
        android:orientation="vertical"
        android:padding="16dp"
        android:theme="@style/ThemeOverlay.Material3.Dark">

        <!-- Logo o ícono de nómina -->
        <ImageView
            android:id="@+id/nav_header_imageView_nomina"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:src="@mipmap/ic_launcher_round"
            android:contentDescription="@string/app_name" />

        <!-- Nombre -->
        <TextView
            android:id="@+id/nav_header_title_nomina"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="12dp"
            android:text="NÓMINA"
            android:textColor="@android:color/white"
            android:textAppearance="@style/TextAppearance.Material3.TitleMedium" />

        <!-- Subtítulo -->
        <TextView
            android:id="@+id/nav_header_subtitle_nomina"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="GESTIÓN DE NÓMINA"
            android:textColor="@android:color/white"
            android:textAppearance="@style/TextAppearance.Material3.BodyMedium" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>